package floorplans;

public class Connection{
	  public int first;
	  public int second;
	  public int x1,y1,x2,y2;
	  
	  Connection(int first, int second, int x1, int y1, int x2, int y2) {
	    this.first = first;
	    this.second = second;
	    this.x1 = x1;
	    this.y1 = y1;
	    this.x2 = x2;
	    this.y2 = y2;
	  }
	 void display() {
	    fill(111);
	    line(x1,y1,x2,y2);
	 } 
	 
	 void toXML(XML xml){
	   XML tmp = xml.addChild("connection");
	   XML id1 = tmp.addChild("id");
	   id1.setContent(Integer.toString(first));
	   XML id2 = tmp.addChild("id");
	   id2.setContent(Integer.toString(second));
	 }
	 
	}